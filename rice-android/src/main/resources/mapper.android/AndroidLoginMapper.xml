<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.android.mapper.AndroidLoginMapper">

    <resultMap type="AndroidUser" id="AndroidUserResult">
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="nickName" column="nick_name"/>
        <result property="email" column="email"/>
        <result property="phoneNumber" column="phonenumber"/>
        <result property="sex" column="sex"/>
        <result property="avatar" column="avatar"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="AndroidUserVo">
        select user_id, user_name, password, nick_name, email, phonenumber, sex, avatar, status
        from rice_android_user
    </sql>

    <select id="androidLogin" parameterType="AndroidLoginBody" resultType="AndroidUser">
        select * from rice_android_user
    </select>


</mapper>
